<h1>პაროლის შეცვლა</h1>

<% form_tag do -%>
<div>
	<label for="password" style="display: inline-block; width: 120px; text-align: right;">ახალი პაროლი:</label>
	<%= password_field_tag :password, params[:password] %>
</div>
<div>
	<label for="password_confirmation" style="display: inline-block; width: 120px; text-align: right;">დადასტურება:</label>
	<%= password_field_tag :password_confirmation, params[:password_confirmation] %>
</div>
<div style="margin-left: 125px;">
	<%= submit_tag "შეცვლა" %>
</div>
<% end -%>